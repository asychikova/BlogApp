
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../css/categories.css" rel="stylesheet" type="text/css" media="all">
  <title>Posts</title>
</head>


<h2>Categories</h2>
<a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
<hr />
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Category Name</th>
      <th>Remove</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <td>{{this.id}}</td>
      <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
      <td>
        <a href="/categories/delete/{{this.id}}" class="btn btn-danger">remove</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>



