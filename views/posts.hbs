
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../css/posts.css" rel="stylesheet" type="text/css" media="all">
  <title>Posts</title>
</head>

<div class="row">
  <h2>Posts</h2>
    <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
    <hr />
  <div class="col-md-12">
    
      <table class="table">
          <tr>
            <th>Post ID</th>
            <th>Title</th>
             <th>Post Date</th>
             <th>Category</th>
             <th>Published</th>
             <th>Remove</th>
          </tr>
        <tbody>
          {{#each posts}}
            <tr>
                 
              <td>{{this.id}}</td>
              <td>{{this.title}}</td>
              <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
              <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
              <td>{{this.published}}</td>
               <td>
              <a href="/posts/delete/{{this.id}}" class="btn btn-danger">remove</a>
    </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{#unless posts}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/unless}}
  </div>
</div>





